{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"moduleResolution": "Node",
		"lib": [
			"ESNext",
			"ESNext.AsyncIterable",
			"DOM"
		],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"types": [
			"@types/node"
		]
	},
	"exclude": [
		"node_modules",
		"test"
	],
	"typeRoots": [
    "./src/types"
  ]
}

